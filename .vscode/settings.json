{
  // ========== Core Performance ==========
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "explorer.compactFolders": false,

  // أسكت الفهرسة/المراقبة على المجلدات الثقيلة
  "files.exclude": {
    "**/.git": true, "**/.svn": true, "**/.hg": true,
    "**/node_modules": true, "**/dist": true, "**/build": true, "**/out": true,
    "**/.next": true, "**/.cache": true, "**/.turbo": true,
    "**/.venv": true, "**/venv": true, "**/__pycache__": true,
    "**/.mypy_cache": true, "**/.pytest_cache": true, "**/coverage": true,
    "**/target": true, "**/.gradle": true
  },
  "search.exclude": {
    "**/node_modules": true, "**/dist": true, "**/build": true, "**/out": true,
    "**/.next": true, "**/.cache": true, "**/.turbo": true,
    "**/.venv": true, "**/venv": true, "**/__pycache__": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true, "**/dist/**": true, "**/build/**": true, "**/out/**": true,
    "**/.next/**": true, "**/.cache/**": true, "**/.turbo/**": true,
    "**/.venv/**": true, "**/venv/**": true, "**/__pycache__/**": true,
    "**/coverage/**": true, "**/target/**": true
  },

  // ========== Editor UI: خف الوزن ==========
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.smoothScrolling": false,
  "editor.codeLens": false,
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.enabled": false,
  "editor.hover.enabled": false,
  "editor.quickSuggestions": { "other": false, "comments": false, "strings": false },
  "editor.suggestOnTriggerCharacters": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.formatOnSave": false,
  "breadcrumbs.enabled": false,
  "problems.autoReveal": false,
  "workbench.tree.indent": 10,

  // ========== IntelliSense تقريبًا Off ==========
  "editor.semanticHighlighting.enabled": false,

  // TypeScript / JavaScript
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "typescript.suggest.completeFunctionCalls": false,
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "javascript.preferences.includePackageJsonAutoImports": "off",
  // استخدم TS داخل المشروع فقط لو اضطرّيت (لكن بهالوضع احنا قافلين الفالديشن أصلاً)
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": false,
  "typescript.tsserver.maxTsServerMemory": 1024,

  // Python (Pylance) — أبسط ما يمكن
  "python.analysis.indexing": false,
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.autoImportCompletions": false,
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.terminal.activateEnvironment": false,

  // ========== Git & Extensions ==========
  // تعطيل Git المدمج يريح المشاريع العملاقة
  "git.enabled": false,
  "git.autofetch": false,
  "git.decorations.enabled": false,
  "git.untrackedChanges": "hidden",

  // GitLens (لو مُثبّت) — قصقص أقصى شيء
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.over": "annotation",
  "gitlens.views.repositories.files.layout": "list",

  // ========== Telemetry & Background ==========
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // ========== Terminal ==========
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  // ========== Per-language (اختياري) ==========
  "[json]": { "editor.formatOnSave": true },
  "[markdown]": { "editor.wordWrap": "bounded" }
}
